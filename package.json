{
  "name": "landscape-node",
  "version": "0.1.1",
  "description": "A command-line tool for executing Landscape scripts.",
  "main": "./lib/landscape",
  "bin": {
    "landscape": "./lib/cli.js"
  },
  "scripts": {
    "dev": "babel-node ./test/playground.js",
    "compile": "babel src/ --out-dir lib/ && sed -i '1 i\\#!/usr/bin/env node' lib/cli.js",
    "test": "mocha --compilers js:babel-core/register --require babel-polyfill",
    "publish2npm": "npm run compile && publish"
  },
  "author": "Alazhar Shamshuddin <ashamshuddin@surrey.ca>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CityofSurrey/landscape-deploy/issues"
  },
  "config": {
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "The commit subject does not match the allowed pattern!",
      "helpMessage": ""
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CityofSurrey/landscape-deploy.git"
  },
  "dependencies": {
    "bunyan": "^1.8.1",
    "commander": "^2.9.0",
    "node-print": "0.0.4"
  },
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-eslint": "^6.0.4",
    "babel-plugin-transform-runtime": "^6.8.0",
    "babel-polyfill": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.8.0",
    "babel-runtime": "^6.6.1",
    "chai": "^3.5.0",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^9.0.0",
    "eslint-plugin-import": "^1.7.0",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-react": "^5.0.1",
    "ghooks": "^1.2.1",
    "mocha": "^2.4.5",
    "publish": "^0.6.0",
    "validate-commit-msg": "^2.6.1"
  }
}
